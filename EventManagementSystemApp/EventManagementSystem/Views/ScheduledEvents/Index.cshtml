@model IEnumerable<EMS.Domain.Models.ScheduledEvent>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="d-flex justify-content-between">
        <p class="fs-1">Scheduled events</p>
        <div class="m-3">
            <a class="btn btn-success" asp-controller="ScheduledEvents" asp-action="Create">Schedule new event</a>
        </div>
    </div>
    <hr />
    
    @for(int i=0; i < Model.Count(); i++)
    {
        var item = Model.ElementAt(i);
        if(i % 3 == 0)
        {
            @:<div class="row d-flex justify-content-start">
        }
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 m-4">

            <div class="card" style="width: 18rem; height: 27rem">
                <img style="max-height:12rem; object-fit:cover" class="card-img-top" src="@item.ScheduledEventImage" alt="Card image cap">
               <div class="card-body">
                    <h5 class="card-title">Event: @item.Event.EventName</h5><br />
                    <h6 class="card-title">Location: @item.ScheduledEventLocation</h6>
                    <h6 class="card-title">Date: @item.ScheduledEventDateTime.Value.ToString("MMMM dd, yyyy")</h6> <!-- Date formatted -->
                </div>
                <div class="card-footer">
                    <div class="text-center">
                        <a asp-controller="ScheduledEvents" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                        <a asp-controller="ScheduledEvents" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-controller="ScheduledEvents" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>            
                    </div>
                    
                </div>
            </div>
        </div>

        if(i % 3 == 2)
        {
            @:</div>
        }
    }
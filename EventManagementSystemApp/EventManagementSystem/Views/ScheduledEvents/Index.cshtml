@model IEnumerable<EMS.Domain.Models.ScheduledEvent>

@{
    ViewData["Title"] = "Index";
}

<div class="container py-2">
    <div class="d-flex justify-content-between pt-2">
        <p class="h1 text-white m-0 ps-4">All Scheduled Events</p>
        <div class="pe-4 d-flex align-items-center">
            <a class="btn btn-secondary" asp-controller="ScheduledEvents" asp-action="Create">Schedule New Event</a>
        </div>
    </div>
    <hr />
    
    @for(int i=0; i < Model.Count(); i++)
    {
        var item = Model.ElementAt(i);
        if(i % 3 == 0)
        {
            @:<div class="row d-flex justify-content-center">
        }
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 m-4">
            <div class="card" style="width: 18rem; height: 27rem">
                <img style="max-height:12rem; object-fit:cover" class="card-img-top" src="@item.ScheduledEventImage" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Event: @item.Event.EventName</h5><br />
                    <h6 class="card-title">Location: @item.ScheduledEventLocation</h6>
                    <h6 class="card-title">Date: @item.ScheduledEventDateTime.Value.ToString("MMMM dd, yyyy")</h6> <!-- Date formatted -->
                 </div>
                 <div class="card-footer text-center">
                     <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">
                        <i class="bi bi-pencil-square"></i> Edit
                     </a> 
                     <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                         <i class="bi bi-info-circle"></i> Info
                     </a> 
                     <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                         <i class="bi bi-trash3"></i> Delete
                     </a>
                 </div>
            </div>
        </div>

        if(i % 3 == 2)
        {
            @:</div>
        }
    }
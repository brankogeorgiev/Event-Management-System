@model EMS.Domain.DTO.ScheduledEventDTO

@{
    ViewData["Title"] = "Create";
}

<div class="container p-3">
    <div class="bg-white w-50 p-5 m-auto rounded">
        <button class="btn btn-outline-secondary" onclick="history.back()">
            <i class="bi bi-arrow-left"></i> Back
        </button>
        <h2 class="text-center">Create Scheduled Event</h2>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="EventId">Select Event</label>
                @Html.DropDownListFor(model => model.EventId, new SelectList(Model.ListModel, "Id", "EventName"), "Select an Event", new { @class = "form-control", i = "EventId" })
            </div>
            <div class="form-group my-2">
                <label asp-for="ScheduledEventDateTime" class="control-label"></label>
                <input asp-for="ScheduledEventDateTime" class="form-control" />
                <span asp-validation-for="ScheduledEventDateTime" class="text-danger"></span>
            </div>

            <div class="form-group my-2">
                <label asp-for="ScheduledEventLocation" class="control-label"></label>
                <input asp-for="ScheduledEventLocation" class="form-control" />
                <span asp-validation-for="ScheduledEventLocation" class="text-danger"></span>
            </div>

            <div class="form-group my-2">
                <label asp-for="ScheduledEventImage" class="control-label"></label>
                <input asp-for="ScheduledEventImage" class="form-control" />
                <span asp-validation-for="ScheduledEventImage" class="text-danger"></span>
            </div>

            <div class="form-group d-flex justify-content-center">
                <input type="submit" value="Create" class="fs-5 w-25 btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

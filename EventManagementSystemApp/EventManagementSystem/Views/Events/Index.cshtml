@model List<EMS.Domain.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<div class="container py-2">
    <div class="d-flex justify-content-between pt-2">
        <p class="h1 text-white m-0 ps-4">All Events</p>
        <div class="pe-4 d-flex align-items-center">
            <a asp-action="Create" class="btn btn-secondary">Create New Event</a>
        </div>
    </div>
    <hr />

    @for (int i = 0; i < Model.Count(); i++)
    {
        var item = Model[i];

        if(i % 3 == 0)
        {
           @: <div class="row mt-3 d-flex justify-content-center">
        }

        <div class="col-md-3 m-3">
           <div class="card">
              <img class="card-img-top" src="@item.EventImage" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title">@item.EventName</h5>
                <p class="card-text">@item.EventDescription</p>
              </div>
              <div class="card-footer text-center">
                 <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">
                    <i class="bi bi-pencil-square"></i> Edit
                 </a> 
                 <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                     <i class="bi bi-info-circle"></i> Info
                 </a> 
                 <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                     <i class="bi bi-trash3"></i> Delete
                 </a>
              </div>
            </div>
        </div>

        if(i % 3 == 2)
        {
            @: </div>
        }
    }
</div>

@model EMS.Domain.Models.Ticket

@{
    ViewData["Title"] = "Details";
}

<div class="container p-3">
    <div class="w-75 m-auto rounded p-5 bg-white">
        <h4 class="text-center text-secondary">Ticket Details</h4>
        <hr />
        <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TicketPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TicketPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ScheduledEvent)
        </dt>
        <dd class = "col-sm-10">
            @Model.TicketDisplayString
        </dd>
    </dl>
    <div class="ps-3">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a> |
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    </div>
</div>


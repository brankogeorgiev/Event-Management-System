@model EMS.Domain.DTO.TicketDTO
@{
    ViewData["Title"] = "Create";
}

<h1>Create Ticket</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ScheduledEventId">Scheduled Event</label>
                    @Html.DropDownListFor(model => model.ScheduledEventId,
                         new SelectList(Model.ListModel, "Id", "EventNameDisplay"),
                         "Select a Scheduled Event", 
                        new { @class = "form-control", i = "ScheduledEventId"})
            </div>

            <div class="form-group">
                <label asp-for="TicketPrice" class="control-label">Ticket Price</label>
                <input asp-for="TicketPrice" class="form-control" />
                <span asp-validation-for="TicketPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

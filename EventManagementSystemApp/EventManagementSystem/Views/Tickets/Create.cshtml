@model EMS.Domain.DTO.TicketDTO
@{
    ViewData["Title"] = "Create";
}

<div class="container p-3">
    <div class="bg-white w-50 p-5 m-auto rounded">
        <button class="btn btn-outline-secondary" onclick="history.back()">
            <i class="bi bi-arrow-left"></i> Back
        </button>
        <h2 class="text-center">Create Ticket</h2>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group my-2">
                <label asp-for="ScheduledEventId">Scheduled Event</label>
                    @Html.DropDownListFor(model => model.ScheduledEventId,
                         new SelectList(Model.ListModel, "Id", "EventNameDisplay"),
                         "Select a Scheduled Event", 
                        new { @class = "form-control", i = "ScheduledEventId"})
            </div>

            <div class="form-group my-2">
                <label asp-for="TicketPrice" class="control-label">Ticket Price</label>
                <input asp-for="TicketPrice" class="form-control" />
                <span asp-validation-for="TicketPrice" class="text-danger"></span>
            </div>

            <div class="form-group d-flex justify-content-center">
                <input type="submit" value="Create" class="fs-5 w-25 btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

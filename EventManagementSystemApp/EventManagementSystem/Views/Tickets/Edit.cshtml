@model EMS.Domain.Models.Ticket

@{
    ViewData["Title"] = "Edit";
}

<div class="container p-3">
    <div class="bg-white w-50 p-5 m-auto rounded">
        <button class="btn btn-outline-secondary" onclick="history.back()">
            <i class="bi bi-arrow-left"></i> Back
        </button>
        <h2 class="text-center">Edit Ticket</h2>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ScheduledEventId" />

            <div class="form-group">
                <label asp-for="ScheduledEvent" class="control-label"></label>
                <input type="text" class="form-control" value="@Model.TicketDisplayString" disabled readonly>
            </div>

            <div class="form-group">
                <label asp-for="TicketPrice" class="control-label"></label>
                <input asp-for="TicketPrice" class="form-control" />
                <span asp-validation-for="TicketPrice" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-center my-2">
                <input type="submit" value="Update" class="fs-5 w-25 btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

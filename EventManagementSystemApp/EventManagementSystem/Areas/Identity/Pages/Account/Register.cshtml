@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="container p-3">
    <div class="bg-white w-75 m-auto p-5 rounded">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="text-center text-primary">Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="row">
                <div class="col-5 form-group my-2 mx-auto">
                    <label asp-for="Input.FirstName" class="control-label"></label>
                    <input asp-for="Input.FirstName" class="fs-5 form-control" autocomplete="FirstName" aria-required="true" placeholder="FirstName" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="col-5 form-group my-2 mx-auto">
                    <label asp-for="Input.LastName" class="control-label"></label>
                    <input asp-for="Input.LastName" class="fs-5 form-control" autocomplete="LastName" aria-required="true" placeholder="LastName" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-5 form-group my-2 mx-auto">
                    <label asp-for="Input.Email" class="control-label"></label>
                    <input asp-for="Input.Email" class="fs-5 form-control" autocomplete="usename@gmail.com" aria-required="true" placeholder="usename@gmail.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="col-5 form-group my-2 mx-auto">
                    <label asp-for="Input.Address" class="control-label"></label>
                    <input asp-for="Input.Address" class="fs-5 form-control" autocomplete="Address 1/2-3" aria-required="true" placeholder="Address 1/2-3" />
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-5 form-group my-2 mx-auto">
                    <label asp-for="Input.Password" class="control-label"></label>
                    <input asp-for="Input.Password" class="fs-5 form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="col-5 form-group my-2 mx-auto">
                    <label asp-for="Input.ConfirmPassword" class="control-label"></label>
                    <input asp-for="Input.ConfirmPassword" class="fs-5 form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-center pt-2">
                <button id="registerSubmit" type="submit" class="fs-5 w-50 btn btn-lg btn-primary">Register</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
